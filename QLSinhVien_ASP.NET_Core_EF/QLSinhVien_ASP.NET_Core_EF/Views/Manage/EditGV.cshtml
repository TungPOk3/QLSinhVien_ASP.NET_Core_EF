@model Tuple<QLSinhVien_ASP.NET_Core_EF.Models.GiaoVien, List<QLSinhVien_ASP.NET_Core_EF.Models.Khoa>>

@{
    ViewData["Title"] = "EditKhoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Area -->
<header class="header">
    <!-- Header Inner -->
    <div class="header-inner" style="padding-top: 30px;">
        <div class="container">
            <div class="inner">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-12">
                        <!-- Start Logo -->
                        <div class="logo">
                            <a href="index.html"><img src="~/images/logo-benxe.png" alt="#" style="width:133px;height:60px;"></a>
                        </div>
                        <!-- End Logo -->
                        <!-- Mobile Nav -->
                        <div class="mobile-nav"></div>
                        <!-- End Mobile Nav -->
                    </div>
                    <div class="col-lg-7 col-md-9 col-12">
                        <!-- Main Menu -->
                        <div class="main-menu">
                            <nav class="navigation">
                                <ul class="nav menu">
                                    <li><a href="/Home/Index">Trang chủ</a></li>
                                    <li><a href="#">Giới thiệu </a></li>
                                    <li class="active"><a href="/Home/ChuNhaXe">Nhà xe </a></li>
                                    <li><a href="#">Chuyến xe </a></li>
                                    <li><a href="#">Tài xế </a></li>
                                    <li><a href="contact.html">Liên hệ</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!--/ End Main Menu -->
                    </div>
                    <div class="col-lg-2 col-12">
                        <div class="get-quote">
                            <a href="/Home/LoginPage" class="btn">Đăng nhập</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ End Header Inner -->
</header>
<!-- End Header Area -->
<section class="contact-us section">
    <div class="container">
        <div class="inner">
            <div class="row" style="justify-content: center; margin-bottom:80px;">
                <div class="col-lg-8">
                    <div class="contact-us-form">
                        <h2>Chỉnh sửa</h2>
                        <!-- Form -->
                        <form class="form" method="post" action="/Manage/EditGV">
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>ID Giáo viên</label>
                                        <div class="input-group">
                                            <span class="form-control" id="idgv">@Model.Item1.IdGiaoVien</span>
                                            <input type="hidden" name="idGiaoVien" value="@Model.Item1.IdGiaoVien" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Tên giáo viên</label>
                                        <input type="text" name="tengv" value="@Model.Item1.TenGv" required="">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Ngày sinh</label>
                                        <input type="text" name="ngaysinh" value="@Model.Item1.NgaySinh" required="">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>SDT</label>
                                        <input type="text" name="sdt" value="@Model.Item1.Sdt" required="">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" name="email" value="@Model.Item1.Email" required="">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <style>
                                            .nice-select {
                                                width: 310px;
                                                height: 50px;
                                            }

                                            .current {
                                                display: block;
                                                padding: 10px;
                                            }
                                        </style>
                                        <label>Tên khoa</label>
                                        <select name="idkhoa">
                                            @foreach (var item in Model.Item2)
                                            {
                                                if (item.IdKhoa == Model.Item1.IdKhoa)
                                                {
                                                    <option value="@item.IdKhoa" selected="selected">@item.TenKhoa</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.IdKhoa">@item.TenKhoa</option>

                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group login-btn">
                                        <button class="btn" type="submit">Chỉnh sửa</button>
                                    </div>

                                </div>
                            </div>
                        </form>
                        <!--/ End Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


